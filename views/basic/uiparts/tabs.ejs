                                        }
                                        .slide-tabs-area {
                                                position: relative;
                                                display: flex;
                                                justify-content: space-around;
                                                margin-top: 20px;
                                                overflow: hidden;
                                        }
                                        .slide-tab-button {
                                                flex: 1;
                                                padding: 12px 0;
                                                background-color: #fff;
                                                font-size: 16px;
                                                border: none;
                                                cursor: pointer;
                                                text-align: center;
                                                transition: background-color 0.3s ease-in-out;
                                        }
                                        .slide-tab-button.active {
                                                color: #00695c;
                                                border-bottom: 2px solid #00695c;
                                        }
                                        .slide-tab-content {
                                                display: none;
                                                padding: 4rem;
                                                pointer-events: none;
                                                opacity: 0; 
                                                position: absolute;
                                                top: 0;
                                                left: 0;
                                                background-color: #f3f4f6;
                                        }
                                        .slide-tab-content.show {
                                                display: block;
                                                pointer-events: auto;
                                                opacity: 1; 
                                                position: relative; 
                                        }
